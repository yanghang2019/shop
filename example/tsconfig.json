{
	"compileOnSave": false,
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"module": "es6",
		"target": "es6",
		"moduleResolution": "node",
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true
	},
	"include": [
		"./src/views/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}